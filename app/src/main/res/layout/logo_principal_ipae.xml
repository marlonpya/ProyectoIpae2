<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/picos"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pico_01"
        android:layout_width="16dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/pico_01" />

    <ImageView
        android:id="@+id/pico_02"
        android:layout_width="39dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/pico_01"
        android:layout_alignLeft="@+id/pico_01"
        android:layout_alignStart="@+id/pico_01"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/pico_02" />

    <ImageView
        android:id="@+id/pico_03"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_alignBottom="@+id/pico_01"
        android:layout_toEndOf="@+id/pico_01"
        android:layout_toRightOf="@+id/pico_01"
        android:background="@drawable/pico_03" />

    <ImageView
        android:id="@+id/pico_04"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/pico_02"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/pico_01"
        android:layout_toRightOf="@+id/pico_01"
        android:background="@drawable/pico_04" />

    <ImageView
        android:id="@+id/pico_05"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/pico_03"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/pico_02"
        android:layout_toRightOf="@+id/pico_02"
        android:background="@drawable/pico_05" />

</RelativeLayout>