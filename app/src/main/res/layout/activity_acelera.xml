<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_a_acelera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="application.ucweb.proyectoipae.AceleraActivity">

    <include layout="@layout/toolbar_principal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:background="@drawable/degradado_acelera">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_tarjeta_innova_acelera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:background="@drawable/tarjeta_acelera" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:text="Diagnóstico de Gestión\nEmpresarial"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

            </RelativeLayout>
        </LinearLayout>

        <co.moonmonkeylabs.realmrecyclerview.RealmRecyclerView
            android:id="@+id/listaRecyclerAcelera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".75"
            app:rrvLayoutType="LinearLayout" />

    </LinearLayout>

</LinearLayout>
