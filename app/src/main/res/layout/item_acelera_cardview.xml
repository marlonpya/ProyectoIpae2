<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnRecycler"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/efecto_item_lista"
    android:clickable="true"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".35"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_item_acelera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:background="@drawable/imagen_comercial_y_marketing" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".55"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_item_acelera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/texto_size4"
            tools:text="ORGANIZACIÓN ESTRATÉGICA" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1" />

</LinearLayout>